{% extends "base.twig" %}

{% block content %}
<section id="post-content" class="section py-18">
	<div class="container">
		<article class="prose post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
			<img src="{{ post.thumbnail.src|resize(1200, 300) }}">
				<h1 class="article-h1">{{ post.title }}</h1>
				<div class="article-body">
					{{post.content}}
				</div>
		</article>
	</div>
</section>

{% endblock %}
