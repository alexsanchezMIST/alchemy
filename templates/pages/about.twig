{% extends "base.twig" %}

{% block content %}

{# BEGIN HERO SECTION #}
<section id="hero" class="section">
    <div class="container--about">
        <div class="hero__wrapper--about">
            <div class="hero__left py-20">
                <h1 class="hero__heading">{{ post.meta('hero_heading') }}</h1>
                <p class="hero__subheading">{{ post.meta('hero_subheading') }}</p>
                <a href="https://ldacoach.coachesconsole.com/calendar/discovery-clarity-call-with-fran" class="btn btn--secondary">Book a Call</a>
            </div>
            <div class="hero__right--about">
                <img src="{{ theme.path ~ '/static/img/fran-cutout.webp' }}" class="hero__img--about" alt="">
            </div>
        </div>
    </div>
</section>
{# END HERO SECTION #}

{# BEGIN CONTENT SECTION #}
<section id="content" class="section py-18">
    <div class="container">
        <article class="prose has-lead">
            {{ post.content }}
        </article>
    </div>
</section>
{# END CONTENT SECTION #}

{% include 'partial/cta.twig' %}

{% endblock %}